<?xml version="1.0" encoding="utf-8"?>
<ServiceConfiguration xmlns="http://waher.se/Schema/ServiceConfiguration.xsd">
	<StartupScript>
		<![CDATA[
			  Global.["GetIdentityProperties"]:= (GetIdentityProperties(Owner):= 
			  (
				legalIdentityProperties:= select top 1 Properties from LegalIdentities where Id = Owner;
				
				if(legalIdentityProperties == null) then
				(
					Error(Owner + " does not exists or does not have approved account.");
				);
				
				identityProperties:= Create(System.Collections.Generic.Dictionary, Waher.Persistence.CaseInsensitiveString, Waher.Persistence.CaseInsensitiveString);

				foreach prop in legalIdentityProperties do
				(
					identityProperties[prop.Name]:= prop.Value;
				);
					
				identityProperties;
			  ););
              ]]>
	</StartupScript>
</ServiceConfiguration>
